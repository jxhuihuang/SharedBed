/* pages/Feedback/Feedback.wxss */
.containers{
    padding: 0 20rpx;
}
.feedBack-tle{
    font-size: 32rpx;
    min-height: 100rpx;
    display: flex;
    align-items: center;
    padding-left: 20rpx;
    /* justify-content: center */
}
.textarea-section{
    display: flex;
    width:100%;
    margin-top: 10rpx;
    position: relative;
    background: #f4f5f7;
    min-height: 100px;
    justify-content: center;
}
.textarea-section  textarea{
    width:100%;
   font-size: 14px;
   height: inherit;
   padding: 15px 15px 20px 15px;
   color: #888;

}
.textarea-statistics{
    position: absolute;
    color: #888;
    font-size: 12px;
    bottom: 5px;
    right: 10px;  
}
.confirm-btn{
    display: flex;
    width: 100%;
    height: 50px;
    background: #c2c5ca;
    color: #FFF;
    font-size: 16px;
    align-items:center;
    justify-content:center;
}


.feedBackSuccess{
    display: flex;
    height: 100vh;
    padding: 0 20rpx;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.success-icon{
    font-size: 140rpx;
    /* color: #F00; */
}
.feedBack-info{
    font-size: 28rpx;
    margin-top: 10rpx;
}